<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.1</TargetFrameworks>
    <AssemblyName>Orc.Analytics</AssemblyName>
    <RootNamespace>Orc.Analytics</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.Analytics</PackageId>
    <PackageVersion>3.0.0-alpha0001</PackageVersion>
    <Description>Analytics library.</Description>
    <PackageTags>orc;analytics;google</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>
  
  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>C839A214-77A0-4C1A-AD2F-1F95C11F770B</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Catel.Fody" Version="4.4.4" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.12.6" />
    <PackageReference Include="Costura.Fody" Version="4.1.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="6.1.2" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="GoogleAnalyticsSDK" Version="1.3.1" PrivateAssets="all" />
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="MethodTimer.Fody" Version="3.1.2" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Net.Http" Version="2.2.29" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.0" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="all" />
    <PackageReference Include="Orc.SystemInfo" Version="4.0.0-alpha0120" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.3" />
  </ItemGroup>
  
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>
